<aside class="aside" ng-class="{'opened' : asideOpened,'closed': !asideOpened}">

    <div class="logo">
        <span class="logo__text">iWords</span>
    </div>

    <ul class="navigation">

        <li class="navigation__item {{activatedRoute name 'app.dashboard' 'navigation__item--active'}}">
            <a class="navigation__link" href="/app">
                <span class="fa fa-home navigation__link-icon"></span>
                <span class="navigation__link-text">Dashboard</span>
                <md-tooltip ng-if="!asideOpened" md-direction="right">Dashboard</md-tooltip>
            </a>
        </li>

        <li class="navigation__item {{activatedRoute name 'app.learning' 'navigation__link--active'}}" aside-nested-menu-toggler active-class="navigation__item--open" open>
            <a class="navigation__link" href="#">
                <span class="fa fa-leanpub navigation__link-icon"></span>
                <span class="navigation__link-text">Nauka</span>
                <md-tooltip ng-if="!asideOpened" md-direction="right">Nauka</md-tooltip>
            </a>
            <!-- Nested -->
            <ul class="navigation-nested">
                <li class="navigation-nested__item {{activatedRoute name 'app.learning.primary' 'navigation-nested__item--active'}}">
                    <a class="navigation-nested__link" href="/app/learning/primary">
                        <span class="fa fa-pencil-square-o navigation__link-icon"></span>
                        <span ng-if="asideOpened">Tłumaczenia</span>
                        <md-tooltip ng-if="!asideOpened" md-direction="right">Tłumaczenia</md-tooltip>
                    </a>
                </li>
                <li class="navigation-nested__item {{activatedRoute name 'app.learning.speaking' 'navigation-nested__item--active'}}">
                    <a class="navigation-nested__link" href="/app/learning/speaking">
                        <span class="fa fa-microphone navigation__link-icon"></span>
                        <span ng-if="asideOpened">Trening wymowy</span>
                        <md-tooltip ng-if="!asideOpened" md-direction="right">Trening wymowy</md-tooltip>
                    </a>
                </li>
            </ul>
        </li>

        <li class="navigation__item {{activatedRoute name 'app.yourExpressions' 'navigation__item--active'}}">
            <a class="navigation__link" href="/app/your-expressions">
                <span class="fa fa-database navigation__link-icon"></span>
                <span class="navigation__link-text">Twoje wyrażenia</span>
                <md-tooltip ng-if="!asideOpened" md-direction="right">Twoje wyrażenia</md-tooltip>
            </a>
        </li>

    </ul>

</aside>
