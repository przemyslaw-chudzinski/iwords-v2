<!-- Auth page -->
<div class="app-login-page">

    <form method="post" action="/auth/login">

        <md-card md-theme-watch>

            <md-card-title>

                <md-card-title-text class="heading">

                    <span class="md-headline">iWords</span>

                </md-card-title-text>

            </md-card-title>

            <md-card-content layout="column">

                <md-input-container>

                    <label>Email</label>

                    <input type="email">

                </md-input-container>

                <md-input-container>

                    <label>Hasło</label>

                    <input type="password">

                </md-input-container>

                <md-checkbox>Zapamiętaj mnie</md-checkbox>

                <div>
                    <md-button type="submit" class="md-raised md-primary">Zaloguj</md-button>
                </div>

            </md-card-content>

        </md-card>

    </form>

</div>
